<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeActivity">

<data>
    <import type="android.view.View" />

    <variable
        name="navigator"
        type="com.naemo.contactmanager.ui.home.HomeNavigator" />

    <variable
        name="viewModel"
        type="com.naemo.contactmanager.ui.home.HomeViewModel" />
</data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_recycler_view" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_icon"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_alignBottom="@+id/home_recycler_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="324dp"
            android:layout_marginTop="753dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="46dp"
            android:clickable="true"
            android:onClick="@{(view) -> navigator.addContact()}"
            app:srcCompat="@color/colorAccent" />

    </RelativeLayout>








</layout>
